{
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "./dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2020",
		"types": ["node"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"isolatedModules": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
